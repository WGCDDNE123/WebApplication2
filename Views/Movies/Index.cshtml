@using System.Activities.Expressions
@model IEnumerable<WebApplication2.Models.Movie>
@{
     ViewBag.Title = "Movies";//title of page
     Layout = "~/Views/Shared/_Layout.cshtml";
} 

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", new{@class= "btn btn-primary"})
   <table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movies</th>
        <th>Genre</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "EditMovie", "Movies", new{id = movie.Id}, null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
    </tbody>
</table>

